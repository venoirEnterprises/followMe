<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Follow Me</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body data-theme="0">
    <section>
        <header>
            @*@Html.Partial("mongoCRUD")*@
            @*<div id="sampleTilemapClient" style="border:2px solid blue;float:right;width:128px;height:128px;position:relative;">
                    background-image: url('/images/block1.png')"
                </div>*@
            @*<div id="sampleTilemapServer" style="border:2px solid green;float:right;width:128px;height:128px;position:relative;">
                    background-image: url('/images/block1.png')"
                </div>*@
            <div style="float:left">

                @*<p>Where below?<b id="belowY"></b></p>
                    <p><b id="somethingBelow">Anything below?</b>*@
            </div>
            @*<audio id="audiotest" autoplay loop="loop">
                    <source src="/Sounds/Level1.mp3" type="audio/mp3" />
                    Sound is not supprted
                </audio>*@
        </header>

        <div>

            <aside id="headDefintion" class="heading">
                <aside id="playerXPMessage"></aside>

                @if (ViewBag.isGame == "yes")
                {
                    <p class="inline"> Welcome to <b id="welcome">@ViewBag.title</b>!</p>
                    <a href="~/Community/players" class="commPlayer">Community - Players  |  </a>
                    <a href="~/Community/competitions" class="commPlayer">Community - Competitions  |  </a>
                    <a href="" id="firstdesign">Design Leader  |  </a>
                    <a href="" id="optionsToggle">Options |</a>
                    <a href="~/Connect/achievements">Achievements  |  </a>
                    <a href="~/Connect/Plan">Planning  |  </a>                    
                    <input type="submit" id="disconnect"value="Quit"/>                    
                    @RenderSection("header", required: false)
                }
                @if (ViewBag.isCommunity == true || ViewBag.isGame == "yes")
                {
                    <aside id="commNotificationAlert"></aside>
                    <a href="~/Connect/Help"><aside id="help"></aside></a>
                }
                
                <!--
                <p class="version">&copy @DateTime.Now.Year Venoir Enterprises FollowMe V1.13.1.4</p>
                <p class="version"> - Levels with all features and enemies, usability and rebirth</p>
                -->
                
                @if (ViewBag.isCommunity == true)
                {
                    <button class="linkBorder" id="backGameComm">Back to the Game</button>
                    <fieldset id="otherPlayerChat">
                        <legend>Chat</legend>
                        <section id="chatMessages"></section>
                        <input type="text" id="sendChatMessage" placeholder="new message" /><button id="submitChatMessage">Send</button>
                    </fieldset>

                }
            </aside>
            @if (ViewBag.isGame == "yes")
            {
            <div class="row" id="optionsDetails">
                @Html.Partial("_options")
            </div>
            }
            <div data-role="page" id="game">
                @RenderBody()
            </div>
            @*<button id="json">JSON</button>*@
        </div>
        @*Test the keyboard code<input type="text" id="kinput" />*@
        <div id="weapon1"></div>
        <div id="player" class="player">
            <aside id="head1" class="head"></aside>
            <aside id="torso1" class="torso"></aside>
            <aside id="legs1" class="legs"></aside>
            <progress class="standard" id="healthPlayer"></progress>
            <progress class="lives" id="livesPlayer" max="3" style="margin-top:8px!important"></progress>
            <progress class="xp" style="margin-top:16px!important" id="xpPlayer" max="25" value="0"></progress>
        </div>


        <input type="hidden" id="isGame" value="@ViewBag.isGame" placeholder="@ViewBag.isGame" />
        <input type="hidden" id="isCommunity" value="@ViewBag.isCommunity" />
        @*<img src="~/Images/spriteSheet.png" />*@
        <img class="centre" src="~/Images/preAlpha.png" />

    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/typeScript")
    @Scripts.Render("~/bundles/myScripts")
    


    <script src="~/Scripts/jquery.signalR-2.2.3.js"></script>
    <script src="~/signalr/hubs"></script>

    <script>
        $("#welcomeSubmit").click(function () {
            var currentUsername = $("#Username").val();
            if (currentUsername == "") {
                currentUsername = $("#Email").val()
            }
            localStorage.setItem("username", currentUsername)

        })
        $("#userShow").text(localStorage.getItem("username"))

        $("#otherPlayerActive").on("change", function () {
            $('.playersAngular button').removeClass('link').removeClass('linkBorder').addClass('linkNoBorder');
        })

        $("#playerCommunitySearch").on("keyup", function () {
            $('.playersAngular button').removeClass('link').removeClass('linkBorder').addClass('linkNoBorder');
        })


    </script>

    <aside class="row"></aside>
    <footer col-md-offset-3>Git: 69, 64, 67, 65, 63, 60, 59, and 24 </footer>
</body>
</html>
